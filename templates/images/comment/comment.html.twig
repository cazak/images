<div class="media-block">
    <a class="media-left" href="#"><img class="img-circle img-sm" alt="Author's avatar" src="{{ author_path(author.avatar) }}"></a>
    <p>{{ comment.date|date }} <span class="comment-is-updated">{% if comment.updateDate %} {{ 'updated' }} {% endif %}</span></p>
    <div class="media-body">
        <div class="mar-btm">
            <a href="{{ path('app_authors_show', {'nicknameOrId': author.nickname}) }}" class="btn-link text-semibold media-heading box-inline">{{ author.nickname }}</a>
            {% if app.user.id == author.id.value %}
                <form class="dropdown-item" action="{{ path('app_comment_remove', {'id': comment.id}) }}" method="post" onsubmit="return confirm('Are you sure?')">
                    <input type="hidden" name="token" value="{{ csrf_token('comment-delete') }}" />
                    <input type="hidden" name="post_id" value="{{ postId }}" />
                    <input type="hidden" name="author_id" value="{{ author.id.value }}" />
                    <button type="submit" class="btn" style="padding: 0">Delete</button>
                </form>
                <div class="for-comment-update">

                </div>
                <button data-comment_id="{{ comment.id.value }}" data-author_id="{{ author.id.value }}" type="submit" class="btn comment-update" style="padding: 0">Update</button>
            {% endif %}
        </div>
        <p class="comment-text">{{ comment.text }}</p>
        <hr>
    </div>
</div>
