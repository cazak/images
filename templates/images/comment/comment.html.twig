<li class="comment">
    <div class="comment-user-image">
        <img class="img-sm" src="{{ author_path(author.avatar) }}">
    </div>
    <div class="comment-info">
        <h4 class="author"><a href="{{ path('app_authors_show', {'nicknameOrId': author.nickname}) }}">{{ author.nickname }}</a>
            ({{ comment.date|date }})<span class="comment-is-updated"> {% if comment.updateDate %} {{ 'updated' }} {% endif %}</span>
        </h4>
        {% if app.user.id == author.id.value %}
            <form action="{{ path('app_comment_remove', {'id': comment.id}) }}" method="post" onsubmit="return confirm('Are you sure?')">
                <input type="hidden" name="token" value="{{ csrf_token('comment-delete') }}" />
                <input type="hidden" name="post_id" value="{{ postId }}" />
                <input type="hidden" name="author_id" value="{{ author.id.value }}" />
                <button type="submit" class="btn btn-danger" style="padding: 0">Delete</button>
            </form>
            <div class="for-comment-update">

            </div>
            <button data-comment_id="{{ comment.id.value }}" data-author_id="{{ author.id.value }}" type="button" class="btn btn-success comment-update" style="padding: 0">Update</button>
        {% endif %}
        <p class="comment-text">{{ comment.text }}</p>
    </div>
</li>
