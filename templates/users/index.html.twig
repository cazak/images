{% extends 'base.html.twig' %}
{% block body %}
    <div>
        {{ form_start(form) }}
            {{ form_row(form.name) }}
            {{ form_row(form.nickname, {'attr': {'onchange': 'this.form.submit()'}}) }}
            {{ form_row(form.email) }}
            {{ form_row(form.role, {'attr': {'onchange': 'this.form.submit()'}}) }}
            {{ form_row(form.id) }}

            <button type="submit" class="btn">Filter</button>
            <a href="{{ path('app_users_list') }}" type="submit" class="btn">Reset</a>
        {{ form_end(form) }}
    </div>
    {% for user in users %}
        <p>ID: <a href="{{ path('app_users_show', {'nicknameOrId': user.id}) }}">{{ user.id }}</a></p>
        <p>Name: {{ user.name }}</p>
        <p>Nickname: {{ user.nickname }}</p>
        <p>Status: {{ user.status }}</p>
    {% endfor %}
{% endblock %}
